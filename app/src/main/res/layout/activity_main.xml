<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.rahmaniaaas.studycase.MainActivity">

    <TextView
        android:id="@+id/header"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:fontFamily="serif"
        android:text="Makan Malam"
        android:textAlignment="center"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="52dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/header2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:fontFamily="serif"
        android:text="dengan Milea"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/editMakanan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header2"
        android:layout_marginTop="45dp"
        android:layout_marginRight="21dp"
        android:layout_marginLeft="21dp"
        android:hint="Masukan Menu Makanan"
        android:inputType="textPersonName"
        android:padding="15dp"    />

    <EditText
        android:id="@+id/editPorsi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/editMakanan"
        android:layout_marginTop="10dp"
        android:layout_marginRight="21dp"
        android:layout_marginLeft="21dp"
        android:hint="Masukan Porsi Makanan"
        android:inputType="textPersonName"
        android:padding="15dp" />

    <Button
        android:id="@+id/btnEatbus"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_alignLeft="@+id/editPorsi"
        android:layout_alignStart="@+id/editPorsi"
        android:layout_below="@+id/editPorsi"
        android:layout_marginTop="33dp"
        android:text="EATBUS"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:onClick="EATBUS"/>

    <Button
        android:id="@+id/btnAbnormal"
        android:layout_width="130dp"
        android:layout_height="65dp"
        android:layout_alignBottom="@+id/btnEatbus"
        android:layout_alignEnd="@+id/editPorsi"
        android:layout_alignRight="@+id/editPorsi"
        android:text="ABNORMAL"
        android:background="@color/colorAccent"
        android:textColor="#ffffff"
        android:textAlignment="center"
        android:onClick="ABNORMAL"/>


</RelativeLayout>
